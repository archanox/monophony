{
	"app-id": "io.gitlab.zehkira.Monophony",
	"runtime": "org.gnome.Platform",
	"runtime-version": "46",
	"sdk": "org.gnome.Sdk",
	"command": "monophony",
	"finish-args": [
		"--socket=pulseaudio",
		"--socket=wayland",
		"--socket=fallback-x11",
		"--share=ipc",
		"--share=network",
		"--device=dri",
		"--own-name=org.mpris.MediaPlayer2.Monophony"
	],
	"modules": [
		"python3-modules.json",
		{
			"name": "yt-dlp",
			"buildsystem": "simple",
			"build-commands": [
				"chmod +x yt-dlp",
				"mv yt-dlp ${FLATPAK_DEST}/bin/"
			],
			"sources": [{
				"type": "file",
				"url": "https://github.com/yt-dlp/yt-dlp/releases/download/2024.08.01/yt-dlp",
				"sha256": "72a16e7a277643eb9e42046737e263e63ec75c6e4532914c918883ebe64db527"
			}]
		},
		{
			"name": "monophony",
			"buildsystem": "simple",
			"build-commands": [
				"cd source && make prefix=${FLATPAK_DEST} install"
			],
			"sources": [{
				"type": "dir",
				"path": "../.."
			}]
		}
	]
}
